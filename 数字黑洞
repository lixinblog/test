#include<stdio.h>
#include<algorithm>
using namespace std;
int main(void)
{
    int n;//输入的四位数字
    scanf("%d",&n);
    int a[4]= {};
    int t=0;
    int b,c;//b是最大数，c是最小数
    while(t!=6174)
    {
        if((n/1000==n%1000/100)&&(n%1000/100==n%100/10)&&(n%100/10==n%10))
        {
            printf("%04d - %04d = 0000\n",n,n);
            return 0;
        }
        else
        {
            a[0]=n/1000;
            a[1]=n%1000/100;
            a[2]=n%100/10;
            a[3]=n%10;
            //b是最大数，c是最小数
            sort(a,a+4);
            b=a[3]*1000+a[2]*100+a[1]*10+a[0];
            c=a[0]*1000+a[1]*100+a[2]*10+a[3];
            t=b-c;
            printf("%04d - %04d = %04d\n",b,c,t);
            n=t;
        }
    }
    return 0;
}
